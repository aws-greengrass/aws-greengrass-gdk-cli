{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "component": {
            "type": "object",
            "maxProperties": 1,
            "minProperties": 1,
            "patternProperties": {
                "[a-zA-Z0-9-_.]+": {
                    "type": "object",
                    "properties": {
                        "author": {
                            "type": "string"
                        },
                        "version": {
                            "type": "string",
                            "oneOf": [
                                {
                                    "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?"
                                },
                                {
                                    "enum": [
                                        "LATEST"
                                    ]
                                }
                            ]
                        },
                        "build": {
                            "type": "object",
                            "properties": {
                                "custom_build_command": {
                                    "type": [
                                        "array",
                                        "string"
                                    ],
                                    "minItems": 1,
                                    "minLength": 1
                                },
                                "build_system": {
                                    "type": "string",
                                    "enum": [
                                        "zip",
                                        "maven",
                                        "gradle",
                                        "custom"
                                    ]
                                }
                            },
                            "required": [
                                "build_system"
                            ],
                            "dependentRequired": {
                                "custom_build_command": [
                                    "build_system"
                                ]
                            },
                            "if": {
                                "properties": {
                                    "build_system": {
                                        "const": "custom"
                                    }
                                }
                            },
                            "then": {
                                "properties": {
                                    "custom_build_command": {}
                                },
                                "required": [
                                    "custom_build_command"
                                ]
                            }
                        },
                        "publish": {
                            "type": "object",
                            "properties": {
                                "bucket": {
                                    "type": "string"
                                },
                                "region": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "bucket",
                                "region"
                            ]
                        }
                    },
                    "required": [
                        "author",
                        "version",
                        "build",
                        "publish"
                    ]
                }
            }
        },
        "tools_version": {
            "type": "string",
            "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?"
        }
    },
    "required": [
        "component",
        "tools_version"
    ]
}