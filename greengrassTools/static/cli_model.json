{
    "greengrass-tools": {
        "sub-commands": [
            "component"
        ]
    },
    "component": {
        "sub-commands": [
            "init",
            "build",
            "publish"
        ]
    },
    "init": {
        "arguments": {
            "language": {
                "name": [
                    "-l",
                    "--language"
                ],
                "help": "Programming language of the template.",
                "choices": [
                    "python",
                    "java"
                ]
            },
            "template": {
                "name": [
                    "-t",
                    "--template"
                ],
                "help": "Name of the template you want to use."
            },
            "repository": {
                "name": [
                    "-r",
                    "--repository"
                ],
                "help": "Name of the repository you want to use."
            }
        },
        "conflicting_arg_groups": [
            [
                "language",
                "template"
            ],
            [
                "repository"
            ]
        ],
        "arg_groups": [
            {
                "title": "Greengrass component templates.",
                "args": [
                    "language",
                    "template"
                ],
                "description": "Init the project with a component template written in programming language of your choice."
            },
            {
                "title": "Greengrass repository catalog.",
                "args": [
                    "repository"
                ],
                "description": "Init the project with a component from repository catalog."
            }
        ]
    },
    "build": {},
    "publish": {}
}